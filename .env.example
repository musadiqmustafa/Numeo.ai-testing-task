# Environment Configuration
# Copy this file to .env for local development

# Application Under Test
BASE_URL=https://ovcharski.com/shop/

# Test Configuration
HEADLESS=true
TIMEOUT=30000
RETRIES=0

# Test User Credentials (for demo purposes - use secure methods in production)
